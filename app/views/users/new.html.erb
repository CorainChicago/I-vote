
<% if @user.errors.any? %>
  <% @errors.each do |error| %>
    <p><%= error %></p>
  <% end %>
<% end %>

<div class="grid-block new-user-form">
  <div class="small-4 medium-8 large-10 grid-content">
    <h2 class="sign-up-header">Sign Up</h2>
  <%= form_for @user, :url => users_create_path do |f| %>
    <%=f.label 'Email:'%>
    <%=f.text_field :email %>
    <br>
    <%=f.label 'Password:'%>
    <%=f.text_field :password%>
    <br>
    <%=f.label 'Street Address:'%>
    <%=f.text_field :street_address %>
    <br>
    <%=f.label 'City:'%>
    <%=f.text_field :city%>
    <br>
    <%=f.label 'State:'%>
    <%=f.text_field :state%>
    <br>
    <%=f.label 'Zip:'%>
    <%=f.text_field :zip%>
    <br>
    <%=f.label 'password'%>
    <%=f.password_field :password%>
    <br>
    <%=f.submit 'Register'%>

  <%end%>
  </div>
</div>
